@model StudentPortal.Web.Models.AddStudentViewModel

<h1>Add Student</h1>

<form method="post" enctype="multipart/form-data">
	<div class="mt-3">
		<label class="form-label">Name</label>
		<input type="text" class="form-control" asp-for="Name" />
	</div>
	<div class="mt-3">
		<label class="form-label">Surname</label>
		<input type="text" class="form-control" asp-for="Surname" />
	</div>

	<div class="mt-3">
		<label class="form-label">Email</label>
		<input type="text" class="form-control" asp-for="Email" />
	</div>

	<div class="mt-3">
		<label class="form-label">Phone</label>
		<input type="text" class="form-control" asp-for=Phone />
	</div>
	<div class="mt-3">
		<label class="form-label">Image</label>
		<input type="file" class="form-control" asp-for="ImgUrl" />
	</div>

	<div class="mt-3">
		<input type="checkbox" class="form-check-input" id="subscribed" asp-for="Subscribed" />
		<label class="form-check-label" for="subscribed">Subscribed</label>
	</div>
	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
	<span class="text-success">
		@ViewBag.Message
	</span>
</form>